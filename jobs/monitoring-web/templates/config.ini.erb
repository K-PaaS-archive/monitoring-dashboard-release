server.url = http://127.0.0.1:8080
server.port = 8080

#모니터링 시스템 사용 옵션 정보
#( IaaS : IaaS 만 사용 , PaaS : PaaS 만 사용, ALL : IaaS, PaaS 모두 사용)
system.monitoring.type=<%= p("monitoring-web.system.type") %>

# PaaS RDB 접속 정보
paas.monitoring.db.type=mysql
paas.monitoring.db.dbname=PaastaMonitoring
paas.monitoring.db.username=<%= p("monitoring-web.db.username") %>
paas.monitoring.db.password=<%= p("monitoring-web.db.password") %>
paas.monitoring.db.host=<%= p("monitoring-web.db.ip") %>
paas.monitoring.db.port=<%= p("monitoring-web.db.port") %>

# InfluxDB
paas.metric.db.username=<%= p("monitoring-web.influxdb.username") %>
paas.metric.db.password=<%= p("monitoring-web.influxdb.password") %>
<% if p('monitoring-web.influxdb.https_enabled') == 'true' %>
paas.metric.db.url=https://<%= p("monitoring-web.influxdb.url") %>
<% else %>
paas.metric.db.url=http://<%= p("monitoring-web.influxdb.url") %>
<% end %>
paas.metric.db.name.paasta=cf_metric_db
paas.metric.db.name.bosh=bosh_metric_db
paas.metric.db.name.container=container_metric_db
paas.metric.db.name.logging=logging_db

# elasticsearch
paas.elasticsearch.username=<%= p("monitoring-web.elasticsearch.username") %>
paas.elasticsearch.password=<%= p("monitoring-web.elasticsearch.password") %>
<% if p('monitoring-web.elasticsearch.https_enabled') == 'true' %>
paas.elasticsearch.url=https://<%= p("monitoring-web.elasticsearch.url") %>
<% else %>
paas.elasticsearch.url=http://<%= p("monitoring-web.elasticsearch.url") %>
<% end %>
paas.elasticsearch.https_enabled=<%= p("monitoring-web.elasticsearch.https_enabled") %>


# Bosh Info
bosh.count=1
bosh.0.name=<%= p("monitoring-web.bosh.director_name") %>
bosh.0.ip=<%= p("monitoring-web.bosh.ip") %>
bosh.0.deployname=bosh

# BOSH client
bosh.client.api.address=https://<%= p("monitoring-web.bosh.ip") %>:<%= p("monitoring-web.bosh.port") %>
bosh.client.api.username=<%= p("monitoring-web.bosh.user") %>
bosh.client.api.password=<%= p("monitoring-web.bosh.password") %>

#disk mount point
disk.mount.point=/,/var/vcap/data
disk./.resp.json.name=/
disk./var/vcap/data.resp.json.name=data

#disk io mount point
disk.io.mount.point=/,/var/vcap/data
disk.io./.read.json.name=/-read
disk.io./.write.json.name=/-write
disk.io./var/vcap/data.read.json.name=data-read
disk.io./var/vcap/data.write.json.name=data-write

#network monitor item
network.monitor.item=eth0

# Time difference(hour)
gmt.time.gap=<%= p("monitoring-web.time.gap") %>

#cfProvider
paas.cf.client.apiaddress=https://api.<%= p("monitoring-web.paasta.system_domain") %>
paas.cf.client.skipsslvalidation=true

#redis
redis.addr=<%= p("monitoring-web.redis.url") %>
redis.password=<%= p("monitoring-web.redis.password") %>
redis.db=0

#Caas monitoring tool Prometheus
prometheus.addr=http://<%= p("monitoring-web.prometheus.url") %>

#Caas k8s ApiServer URL
kubernetesApi.addr=https://<%= p("monitoring-web.kubernetes.url") %>
kubernetes.admin.token=<%= p("monitoring-web.kubernetes.token") %>
#SaaS Pinpoint Url
saas.pinpoint.url=http://<%= p("monitoring-web.pinpoint.url") %>
saas.pinpointWas.url=http://<%= p("monitoring-web.pinpointWas.url") %>

paas.monitoring.cf.host=https://uaa.<%= p("monitoring-web.paasta.system_domain") %>
caas.monitoring.broker.host=http://<%= p("monitoring-web.caasbroker.url") %>

# Zabbix config
zabbix.host=<%= p("monitoring-web.zabbix.host") %>
zabbix.admin.id=<%= p("monitoring-web.zabbix.admin.id") %>
zabbix.admin.pw=<%= p("monitoring-web.zabbix.admin.pw") %>

# Openstack Admin
default.region=<%= p("monitoring-web.openstack.region") %>
default.domain=<%= p("monitoring-web.openstack.domain") %>
default.username=<%= p("monitoring-web.openstack.username") %>
default.password=<%= p("monitoring-web.openstack.password") %>
default.tenant_name=<%= p("monitoring-web.openstack.tenant_name") %>
default.tenant_id=<%= p("monitoring-web.openstack.tenant_id") %>
identity.endpoint=<%= p("monitoring-web.openstack.endpoint") %>
keystone.url=<%= p("monitoring-web.openstack.keystone_url") %>
